<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:src="@drawable/recommend_image"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:background="#55000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:text="yes to all travelers!"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:id="@+id/title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="24sp"
        android:text="Tale of the City"
        android:id="@+id/recommend_big_text"
        android:textColor="#ffffff"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="From World Times"
        android:layout_below="@id/recommend_big_text"
        android:textSize="12sp"
        android:textColor="#ffffff"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="95dp"
        android:layout_marginRight="40dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="4dp"/>

    <View
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="95dp"
        android:layout_above="@id/title_textview"
        android:background="#ffffff"
        android:layout_width="4dp"
        android:layout_height="match_parent"/>

    <View
        android:layout_above="@id/title_textview"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="4dp"/>

    <View
        android:layout_marginRight="40dp"
        android:layout_marginTop="40dp"
        android:layout_above="@id/title_textview"
        android:layout_alignParentRight="true"
        android:background="#ffffff"
        android:layout_width="4dp"
        android:layout_height="match_parent"/>



</RelativeLayout>